{
  "name": "inclukiosk-fe",
  "private": true,
  "version": "0.0.1",
  "author": {
    "name": "SAMNAMMAE",
    "email": "kdhqwe1030@gmail.com"
  },
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:tsc": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:tsc && concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron . --no-sandbox\"",
    "electron:build": "ELECTRON=true npm run build && npm run electron:tsc && electron-builder",
    "electron:publish": "ELECTRON=true npm run build && npm run electron:tsc && electron-builder --publish always"
  },
  "build": {
    "appId": "com.company.inclukiosk",
    "productName": "IncluKiosk",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "s3",
      "bucket": "inclukiosk-fe",
      "region": "ap-northeast-2",
      "path": "/releases",
      "acl": null
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@tanstack/react-query": "^5.76.1",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "electron-is-dev": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.5.3",
    "styled-components": "^6.1.17",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/electron-is-dev": "^0.3.0",
    "@types/node": "^22.15.21",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.3.9",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "terser": "^5.39.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "wait-on": "^9.0.1"
  }
}
